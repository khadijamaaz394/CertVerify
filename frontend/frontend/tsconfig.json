{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",

    "allowJs": false,
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"]
  },
  "include": ["src"],
  "references": []
}
